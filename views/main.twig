<!DOCTYPE html>
<html lang="en">

<head>
  <title>Socketify</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/option1.css" />
    <script src="/option1.js"></script>
  <style>
  body {
            font-family: Arial, sans-serif;
            text-align: center;
            margin: 50px;
        }

        #styleDropdown, #bgColorDropdown, #textColorDropdown {
            margin: 10px;
        }

        #resultContainer {
            margin-top: 30px;
        }
    .button-container {
      margin-bottom: 20px;
    }

  </style>
</head>

<body>
  <div class="container">
    <div class="button-container">
      {% if connected %}
      <div class="container mt-5">
        <div class="form-group">
          <label for="url-display">Spotify Track URL</label>
          <input type="text" class="form-control" id="url-display" readonly>
          <small class="text-muted"><strong>* URL size özeldir. Başkalarının ele geçirmesi durumunda yeni URL
              üretebilirsiniz.</strong></small>

        </div>
        <div class="d-flex justify-content-between">
        <div>
          <button class="btn btn-primary" id="show-url-button">URL'yi Göster</button>
        <button class="btn btn-primary" id="copy-button">URL'yi Kopyala</button>
        <button class="btn btn-success" id="refresh-button">Yeni URL Oluştur</button>
        </div>
        <div>
          <a href="/logout">
            <buton class="btn btn-primary">Logout</buton>
          </a>
        </div>
        </div>
      </div>


      {% else %}
      <a href="/auth">
        <buton class="btn btn-primary">Connect Spotify</buton>
      </a>
      {% endif %}

    </div>
    {% if connected %}
    <div class="settings-container">
      <form >
    <h1>Styling Website</h1>

    <label for="styleDropdown">Select Style:</label>
    <select id="styleDropdown" name"styleDropdown">
        <option value="style1">Style 1</option>
        <option value="style2">Style 2</option>
    </select>

    <br>

    <label for="bgColorDropdown">Select Background Color:</label>
    <select id="bgColorDropdown" name"bgColorDropdown">
        <option value="white">White</option>
        <option value="lightgray">Light Gray</option>
        <option value="black">Black</option>
        <option value="green">Green</option>
    </select>

    <br>

    <label for="textColorDropdown">Select Text Color:</label>
    <select id="textColorDropdown" name"textColorDropdown">
        <option value="black">Black</option>
        <option value="lightgray">Light Gray</option>
        <option value="green">Green</option>
        <option value="white">White</option>
    </select>
<div id="resultContainer"class="container">
    <div class="d-flex justify-content-center align-items-center">
      <img src="https://prodrumloops.com/wp-content/uploads/2017/11/rikishi-drip.jpg" style="max-height: 20vh; max-width: 20vw; margin-right: 1vw">
      <div>
        <h3 id="name">Ric Flair Drip</h3>
        <h2 id="artist">Metro Boomin,Offset</h2>
      </div>
    </div>
  </div>
    <input type="submit" class="btn btn-primary" value="Kaydet">
  
</form>
    </div>
    {% endif %}
     <main>Main</main>
    <div class="d-flex justify-content-center">
    <footer id="footer"></footer>
    <div/>
  </div>


  <script>

    const urlDisplay = document.getElementById('url-display');
    const showUrlButton = document.getElementById('show-url-button');
    const copyButton = document.getElementById('copy-button');
    const refreshButton = document.getElementById('refresh-button');

    let appUrl = "{{appUrl}}";
    let originalUrl = "{{trackID}}"; // Backend tarafından alınan URL
    let urlVisible = false;

    updateUrlVisibility();

    showUrlButton.addEventListener('mousedown', function () {
      urlVisible = true;
      updateUrlVisibility();
    });

    showUrlButton.addEventListener('mouseup', function () {
      urlVisible = false;
      updateUrlVisibility();
    });

    copyButton.addEventListener('click', function () {
      navigator.clipboard.writeText(appUrl + "track/" + originalUrl).then( () =>
      {
        alert('URL kopyalandı!');
      }).catch( () =>
      {
        alert('URL kopyalanamadı!');
      });
    });

    refreshButton.addEventListener('click', function () {
      fetch('/refreshURL') // API yolunu kullanarak yeni URL al
        .then(response => response.json())
        .then(data => {
          originalUrl = appUrl + "track/" + data.trackID;
          updateUrlVisibility();
          alert('Yeni URL oluşturuldu!')
        })
        .catch(error => console.error('Hata:', error));
    });

    function updateUrlVisibility() {
      if (urlVisible) {
        urlDisplay.value = appUrl + "track/" + originalUrl;
      } else {
        urlDisplay.value = '*'.repeat((appUrl+ "track/" + originalUrl).length);
      }
    } 
  </script>
</body>

</html>
